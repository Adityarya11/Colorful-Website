{
    "manifest_version": 3,
    "name": "Dark Mode Wheel",
    "short_name": "DM Wheel",
    "version": "0.1.0",
    "description": "Apply a custom dark / tint theme to any website using a color wheel and presets.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Dark Mode Wheel"
    },
    "options_page": "options/options.html",
    "permissions": [
        "storage",
        "scripting",
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "content/injected_styles.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}